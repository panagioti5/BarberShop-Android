<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDarkAlt"
    android:layout_height="match_parent"
    tools:context=".PrivacyPolicyActivity">

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="match_parent"
        android:backgroundTint="@color/colorPrimaryDarkAlt"
        app:layout_constrainedWidth="true"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:backgroundTint="@color/colorSubs"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/privacyPolicyTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorSubs"
                android:layout_margin="25dp"
                android:text="" />
        </LinearLayout>


    </ScrollView>


</RelativeLayout>