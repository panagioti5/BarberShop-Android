<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDarkAlt"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/colorPrimaryDarkAlt"
        android:elevation="4dp"
        card_view:cardBackgroundColor="@color/colorPrimaryDarkAlt"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="342dp"
            android:background="@color/colorContent">

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text=""
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="229dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="65dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/shopDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:text=""
                android:textColor="@color/colorTitles"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="390dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="52dp"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/colorSubs"
                android:textSize="22dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/isNewShop"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/new_shop"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:maxWidth="60dp"
                android:maxHeight="60dp"
                android:visibility="invisible" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/addToFavorites"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/favorites"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_gravity="right"
                android:maxWidth="30dp"
                android:maxHeight="30dp"
                android:visibility="visible" />


        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/shopLogo"
            android:layout_width="120dp"
            android:maxHeight="120dp"
            android:maxWidth="120dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:outlineSpotShadowColor="@color/black" />


    </androidx.cardview.widget.CardView>


</LinearLayout>